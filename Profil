<script type="text/JavaScript">
function alat tulis()
{
var model=(document.fform.imodel.value);
var jumlahalattulis=parseFloat(document.fform.ijumlah.value);
var ht=0.0;
var total=0.0;
if  (model=="Buku")
{
ht=10000;
}
else if(model=="Pulpen")
{
ht=15000;
}
else
{
ht=20000;
}
total=jumlahalattulis*ht;
alert=("Maka totalnya adalah = "+total)
}
</script>
